{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/login"
        },
        "RateLimiterPolicy": "LoginPolicy"
      },

      "registerRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/register"
        },
        "AuthorizationPolicy": "JwtPolicy"
      },

      "refreshRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/refresh"
        },
        "AuthorizationPolicy": "JwtPolicy"
      },

      "revokeRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/revoke"
        },
        "AuthorizationPolicy": "JwtPolicy"
      },

      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "UserPolicy"
      }
    },

    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": {
            "Address": "http://localhost:5188/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDestination": {
            "Address": "http://localhost:5033/"
          }
        }
      }
    }
  },

  "Jwt": {
    "Issuer": "ERP.AuthService",
    "Audience": "ERP.Client",
    "Secret": "THIS_IS_SUPER_SECRET_KEY_123456789"
  }
}
