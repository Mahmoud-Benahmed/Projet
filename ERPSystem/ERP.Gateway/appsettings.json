{
  "ReverseProxy": {
    "Routes": {

      "authLoginRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/login",
          "Methods": [ "POST" ]
        },
        "RateLimiterPolicy": "LoginPolicy"
      },

      "authGetAuthUserById": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{id}",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "AdminOnly",
        "RateLimiterPolicy": "LoginPolicy"
      },
      "authRegisterRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/register",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "AdminOnly"
      },

      "authRefreshRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/refresh",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "JwtPolicy"
      },

      "authRevokeRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/revoke",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "JwtPolicy"
      },
      "changePasswordRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/change-password/profile",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "LoginPolicy"
      },
      "adminChangePasswordRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/change-password/{id}",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "LoginPolicy"
      },

      "usersCreateRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "AdminOnly",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersGetAllRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersGetActiveRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/active",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersGetDeactivatedRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/deactivated",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersGetByIdRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{id}",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersGetByAuthUserIdRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/auth/{authUserId}",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersCompleteProfileRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{authUserId}/complete",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersActivateRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{id}/activate",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersDeactivateRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{id}/deactivate",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "AdminOrHR",
        "RateLimiterPolicy": "UserPolicy"
      },

      "usersDeleteRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{id}",
          "Methods": [ "DELETE" ]
        },
        "AuthorizationPolicy": "AdminOnly",
        "RateLimiterPolicy": "UserPolicy"
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": {
            "Address": "http://localhost:5188/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDestination": {
            "Address": "http://localhost:5033/"
          }
        }
      }
    }
  },
  "Jwt": {
    "Issuer": "ERP.AuthService",
    "Audience": "ERP.Client",
    "Secret": "THIS_IS_SUPER_SECRET_KEY_123456789"
  }
}