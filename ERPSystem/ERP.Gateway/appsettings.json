{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "RateLimiterPolicy": "LoginPolicy"
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "AuthorizationPolicy": "JwtPolicy",
        "RateLimiterPolicy": "UserPolicy"
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": {
            "Address": "http://localhost:5188/"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDestination": {
            "Address": "https://localhost:5002/"
          }
        }
      }
    }
  },
  "Jwt": {
    "Issuer": "ERP.AuthService",
    "Audience": "ERP.Client",
    "Secret": "THIS_IS_SUPER_SECRET_KEY_123456789"
  }
}